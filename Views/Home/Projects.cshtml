@using PagedList.Mvc;
@using PagedList;
@using AppletSoftware.Models
@using System.Threading
@using System.Globalization
@model PagedList.IPagedList<AspNetProject>
@{
    ViewBag.currentprojects = "active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- --------------------------- Start Projects ------------------------------ -->
<style type="text/css">
    .container__image {
        position: relative;
        margin: 5px 0px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 250px;
        height: 250px;
        border-radius: 50%;
        background-size: cover;
        transition: ease-in-out .3s;
        z-index: 2;
    }
    .picture-item {
        margin:50px 0px !important;
    }
</style>
<section class="allprojects text-center">



    <div class="container">

        <div class="row">

            <div class="text-center col-12@sm filters-group-wrap">
                <div class="filters-group ">

                    <div class="btn-group filter-options">

                        @if (CultureInfo.CurrentCulture.Name == "en-US")
                        {
                            foreach (var item in ViewData["LatestCategories"] as IEnumerable<AppletSoftware.Models.AspNetProjectsCategory>)
                            {
                                <button class="btn btn-default" data-group="@item.PCat_Name_En">@item.PCat_Name_En</button>

                            }

                        }
                        else if (CultureInfo.CurrentCulture.Name == "ar-SA")
                        {

                            foreach (var item in ViewData["LatestCategories"] as IEnumerable<AppletSoftware.Models.AspNetProjectsCategory>)
                            {
                                <button class="btn btn-default" data-group="@item.PCat_Name_En">@item.PCat_Name_Ar</button>

                            }

                        }
                        else
                        {

                            foreach (var item in ViewData["LatestCategories"] as IEnumerable<AppletSoftware.Models.AspNetProjectsCategory>)
                            {
                                <button class="btn btn-default" data-group="@item.PCat_Name_En">@item.PCat_Name_En</button>

                            }

                        }
                    </div>
                </div>


                @* ------------------------------------------- *@

            </div>
        </div>
    </div>

    <div class="container">

        <div id="grid" class="row my-shuffle-container">

            @if (CultureInfo.CurrentCulture.Name == "en-US")
            {





                foreach (var item in Model)
                {








                    <div class="col-md-4 picture-item " data-groups='["@item.AspNetProjectsCategory.PCat_Name_En"]' data-date-created="@item.Project_DateTime" data-title="@item.Project_Name_En">


                        <a href="@Url.Content("~/Images/projects/" + item.Project_Photo)" data-fancybox="Gallery" data-fancybox data-caption="@item.Project_Name_En">
                            <img src="@Url.Content("~/Images/projects/"+item.Project_Photo)" class="container__image" />
                            <div class="overlay">
                                <p><i class="fa fa-search"></i></p>
                            </div>

                        </a>


                        <div class="container__info container__author"> <a class="link" href="@item.Project_Url" target="_blank">@item.Project_Name_En</a></div>
                        <div class="container__info container__location">@item.AspNetProjectsCategory.PCat_Name_En </div>



                    </div>







                }




                <!-- ---------------------------------------------------- -->



            }
            else if (CultureInfo.CurrentCulture.Name == "ar-SA")
            {



                foreach (var item in Model)
                {





                    <div class="col-md-4 picture-item " data-groups='["@item.AspNetProjectsCategory.PCat_Name_En"]' data-date-created="@item.Project_DateTime" data-title="@item.Project_Name_En">


                        <a href="@Url.Content("~/Images/projects/" + item.Project_Photo)" data-fancybox="Gallery" data-fancybox data-caption="@item.Project_Name_Ar">
                            <img src="@Url.Content("~/Images/projects/"+item.Project_Photo)" class="container__image" />
                            <div class="overlay">
                                <p><i class="fa fa-search"></i></p>
                            </div>

                        </a>


                        <div class="container__info container__author"> <a class="link" href="@item.Project_Url" target="_blank">@item.Project_Name_Ar</a></div>
                        <div class="container__info container__location">@item.AspNetProjectsCategory.PCat_Name_Ar </div>



                    </div>




                }


                <!-- ---------------------------------------------------- -->



            }
            else
            {




                foreach (var item in Model)
                {


                    <div class="col-md-4 picture-item " data-groups='["@item.AspNetProjectsCategory.PCat_Name_En"]' data-date-created="@item.Project_DateTime" data-title="@item.Project_Name_En">


                        <a href="@Url.Content("~/Images/projects/" + item.Project_Photo)" data-fancybox="Gallery" data-fancybox data-caption="@item.Project_Name_En">
                            <img src="@Url.Content("~/Images/projects/"+item.Project_Photo)" class="container__image" />
                            <div class="overlay">
                                <p><i class="fa fa-search"></i></p>
                            </div>

                        </a>


                        <div class="container__info container__author"> <a class="link" href="@item.Project_Url" target="_blank">@item.Project_Name_En</a></div>
                        <div class="container__info container__location">@item.AspNetProjectsCategory.PCat_Name_En </div>



                    </div>








                }




            }


            <div class="col-1@sm col-1@xs my-sizer-element"></div>
        </div>
       
    
    
        <div class="col-sm-12 col-xs-12 text-center">
            <nav aria-label="Page navigation">


                @Html.PagedListPager(Model, page => Url.Action("Projects", new { page }))

            </nav>
        </div>
    
    </div>

    

</section>

<!-- --------------------------- End Projects -------------------------------- -->
