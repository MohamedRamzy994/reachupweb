@model AppletSoftware.Models.PlansViewModel

@{

    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<!-- breadcrumbs -->
<div class="w3l_agileits_breadcrumbs">
    <div class="w3l_agileits_breadcrumbs_inner">
        <ul>
            <li><a href="@Url.Action("Plans","Manage")">@AppletDashIndex.DashIndex.appletdashindexsidebarplans</a><span>«</span></li>
            <li>@AppletDashIndex.DashIndex.appletdasheditplansbreadcrumbs</li>
        </ul>
    </div>
</div>
<!-- //breadcrumbs -->

<div class="inner_content_w3_agile_info two_in">
    <h2 class="w3_inner_tittle">@AppletDashIndex.DashIndex.appletdasheditplansbreadcrumbs</h2>

    <!--/forms-->
    <div class="forms-main_agileits">
        <!--/forms-inner-->
        <div class="forms-inner">
            <!--/set-3-->

            <div class="wthree_general">


                <div class="grid-1 graph-form agile_info_shadow">
                    <h3 class="w3_inner_tittle two"> @AppletDashIndex.DashIndex.appletdasheditplansdetails</h3>

                    <div class="row">


                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">


                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashplansnameenglish)</div>
                                    <div class="panel-body"> @Html.DisplayFor(m => m.Plan_Name_En, new { @class = "" })</div>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">


                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashplansnamearabic)</div>
                                    <div class="panel-body"> @Html.DisplayFor(m => m.Plan_Name_Ar, new { @class = "" })</div>
                                </div>

                            </div>
                        </div>




                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">

                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashprojectsdatetime)</div>
                                    <div class="panel-body"> @Html.DisplayFor(m => m.Plan_DateTime, new { @class = "" })</div>
                                </div>








                            </div>
                        </div>


                    </div>


                    <div class="row">


                        <div class="col-md-4 col-md-offset-0">

                            <div class="panel panel-info">
                                <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashplansdescriptionenglish)</div>
                                <div class="panel-body"> @Html.Raw(Model.Plan_Description_En)</div>
                            </div>









                        </div>
                        <div class="col-md-4 col-md-offset-0">

                            <div class="panel panel-info">
                                <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashplansnamearabic)</div>
                                <div class="panel-body"> @Html.Raw(Model.Plan_Description_Ar)</div>
                            </div>









                        </div>

                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">

                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashprojectcategoriespublisher)</div>

                                    @{
                                        AppletSoftware.Models.AppletSoftwareEntities Context = new AppletSoftware.Models.AppletSoftwareEntities();

                                        string Fname_En = Context.AspNetUsersInfoPlus.Where(m => m.Id == Model.Id).SingleOrDefault().UInfoPlus_Fname_En;
                                        string Lname_En = Context.AspNetUsersInfoPlus.Where(m => m.Id == Model.Id).SingleOrDefault().UInfo_Lname_En;

                                        string Publisher = Fname_En + " " + Lname_En;

                                    }

                                    <div class="panel-body"> @Html.DisplayFor(m => Publisher, new { @class = "" })</div>
                                </div>






                            </div>



                        </div>



                    </div>

                    

                    <div class="row">

                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">


                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashplansprice)</div>
                                    <div class="panel-body"> @Html.DisplayFor(m => m.Plan_Price, new { @class = "" })</div>
                                </div>

                            </div>
                        </div>
                   
                    </div>



                </div>




            </div>

            @using (Html.BeginForm("EditPlans", "Manage", FormMethod.Post, new { id = "EditPlanForm", role = "form", enctype = "multipart/form-data" }))
            {


                @Html.AntiForgeryToken()
            <div class="wthree_general">
                @Html.HiddenFor(m => Model.Plan_Id)

                <div class="wthree_general">


                    <div class="grid-1 graph-form agile_info_shadow">
                        <h3 class="w3_inner_tittle two">@AppletDashIndex.DashIndex.appletdasheditplansbreadcrumbs</h3>

                        <div class="row">


                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group has-success">
                                    @Html.ValidationMessageFor(m => m.Plan_Name_En, "", new { @class = "text-danger" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </span>
                                        @Html.TextBoxFor(m => m.Plan_Name_En, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashplansnameenglish })

                                    </div>
                                </div>
                            </div>


                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group has-success">
                                    @Html.ValidationMessageFor(m => m.Plan_Name_Ar, "", new { @class = "text-danger" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </span>
                                        @Html.TextBoxFor(m => m.Plan_Name_Ar, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashplansnamearabic })

                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">


                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group has-success">
                                    @Html.ValidationMessageFor(m => m.Plan_Description_En, "", new { @class = "text-danger" })
                                    <span class="input-group-addon">
                                        @AppletDashIndex.DashIndex.appletdashplansdescriptionenglish &nbsp;<i class="fa fa-pencil-square-o"></i>
                                    </span>
                                    @Html.TextAreaFor(m => m.Plan_Description_En, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashplansdescriptionenglish })

                                    <script>
                                        CKEDITOR.replace('Plan_Description_En');
                                    </script>

                                </div>
                            </div>

                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group has-success">
                                    @Html.ValidationMessageFor(m => m.Plan_Description_Ar, "", new { @class = "text-danger" })
                                    <span class="input-group-addon">
                                        @AppletDashIndex.DashIndex.appletdashplansdescriptionarabic  &nbsp;<i class="fa fa-pencil-square-o"></i>
                                    </span>
                                    @Html.TextAreaFor(m => m.Plan_Description_Ar, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashplansdescriptionarabic })

                                    <script>
                                        CKEDITOR.replace('Plan_Description_Ar');
                                    </script>

                                </div>
                            </div>




                        </div>


                        <div class="row">
                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group has-success">

                                    @Html.ValidationMessageFor(m => m.PlanCat_Id, "", new { @class = "text-danger" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-bitbucket"></i>
                                        </span>

                                        @Html.DropDownListFor(m => m.PlanCat_Id, Model.Categories, AppletDashIndex.DashIndex.appletdashnewprojectplaceholdercategory, new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>


                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group has-success">
                                    @Html.ValidationMessageFor(m => m.Plan_Price, "", new { @class = "text-danger" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-money"></i>
                                        </span>
                                        @Html.TextBoxFor(m => m.Plan_Price, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashplansprice })

                                    </div>
                                </div>
                            </div>





                        </div>

                        <div class="button">

                            <p class="btnText">@AppletDashIndex.DashIndex.appletdashnewprojectreadybutton</p>
                            <div class="btnTwo">
                                <input type="submit" class="btnText2 btn-submit" value="@AppletDashIndex.DashIndex.appletdashnewprojectsavebutton">
                            </div>


                        </div>


                    </div>
                </div>
            </div>

                <!--//set-3-->
            }
        </div>

        <!--//forms-inner-->
    </div>
    <!--//forms-->
</div>

<script type="text/javascript">

    $(document).ready(function () {

        var modelStatus =@string.IsNullOrEmpty(Model.PlanStatus).ToString().ToLower();

        if (status == false) {

            var modelMessage =@string.Compare(Model.PlanStatus, "Success");


            if (modelMessage == 0) {



                $.toast({
                    text: " Plan Edited Successfuly Thank you :) !", // Text that is to be shown in the toast
                    heading: 'APPLET Software', // Optional heading to be shown on the toast
                    icon: 'success', // Type of toast icon
                    showHideTransition: 'slide', // fade, slide or plain
                    allowToastClose: true, // Boolean value true or false
                    hideAfter: 10000, // false to make it sticky or number representing the miliseconds as time after which toast needs to be hidden
                    stack: 5, // false if there should be only one toast at a time or a number representing the maximum number of toasts to be shown at a time
                    position: { left: '0', right: '0', top: '0', bottom: 'auto' }, // bottom-left or bottom-right or bottom-center or top-left or top-right or top-center or mid-center or an object representing the left, right, top, bottom values



                    textAlign: 'center',  // Text alignment i.e. left, right or center
                    loader: true,  // Whether to show loader or not. True by default
                    loaderBg: '#9EC600',  // Background color of the toast loader
                    beforeShow: function () { }, // will be triggered before the toast is shown
                    afterShown: function () { }, // will be triggered after the toat has been shown
                    beforeHide: function () { }, // will be triggered before the toast gets hidden
                    afterHidden: function () { }  // will be triggered after the toast has been hidden
                });




            }



        }




    });

</script>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}