@model AppletSoftware.Models.TeamsCategoriesViewModel

@{

    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<!-- breadcrumbs -->
<div class="w3l_agileits_breadcrumbs">
    <div class="w3l_agileits_breadcrumbs_inner">
        <ul>
            <li><a href="@Url.Action("TeamsCategories","Manage")">@AppletDashIndex.DashIndex.appletdashindexsidebarteamscategories</a><span>«</span></li>
            <li>  @AppletDashIndex.DashIndex.appletdasheditcategorybreadcrums</li>
        </ul>
    </div>
</div>
<!-- //breadcrumbs -->

<div class="inner_content_w3_agile_info two_in">
    <h2 class="w3_inner_tittle">@AppletDashIndex.DashIndex.appletdasheditcategorybreadcrums</h2>

    <!--/forms-->
    <div class="forms-main_agileits">
        <!--/forms-inner-->
        <div class="forms-inner">
            <!--/set-3-->

            <div class="wthree_general">


                <div class="grid-1 graph-form agile_info_shadow">
                    <h3 class="w3_inner_tittle two">@AppletDashIndex.DashIndex.appletdasheditcategorybreadcrums</h3>

                    <div class="row">


                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">


                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashnewcategorynameen)</div>
                                    <div class="panel-body"> @Html.DisplayFor(m => m.TCat_Name_En, new { @class = "" })</div>
                                </div>









                            </div>
                        </div>


                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">


                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashprojectsdatetime)</div>
                                    <div class="panel-body"> @Html.DisplayFor(m => m.TCat_DateTime, new { @class = "" })</div>
                                </div>









                            </div>
                        </div>
                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">

                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashprojectcategoriespublisher)</div>

                                    @{
                                        AppletSoftware.Models.AppletSoftwareEntities Context = new AppletSoftware.Models.AppletSoftwareEntities();

                                        string Fname_En = Context.AspNetUsersInfoPlus.Where(m => m.Id == Model.Id).SingleOrDefault().UInfoPlus_Fname_En;
                                        string Lname_En = Context.AspNetUsersInfoPlus.Where(m => m.Id == Model.Id).SingleOrDefault().UInfo_Lname_En;

                                        string Publisher = Fname_En + " " + Lname_En;

                                    }

                                    <div class="panel-body"> @Html.DisplayFor(m => Publisher, new { @class = "" })</div>







                                </div>


                            </div>
                        </div>

                    </div>


                    <div class="row">

                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">


                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashnewcategorynamear)</div>
                                    <div class="panel-body"> @Html.DisplayFor(m => m.TCat_Name_Ar, new { @class = "" })</div>
                                </div>









                            </div>
                        </div>
                        <div class="col-md-4 col-md-offset-0">

                            <div class="panel panel-info">
                                <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashnewcategorydescriptionen)</div>
                                <div class="panel-body"> @Html.Raw(Model.TCat_Description_En)</div>
                            </div>









                        </div>


                        <div class="col-md-4 col-md-offset-">



                            <div class="panel panel-info">
                                <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashnewcategorydescriptionar)</div>
                                <div class="panel-body"> @Html.Raw(Model.TCat_Description_Ar)</div>
                            </div>









                        </div>
                    </div>



                </div>




            </div>

            @using (Html.BeginForm("EditTeamsCategories", "Manage", FormMethod.Post, new { id = "CategoryEditForm", role = "form" }))
            {


                @Html.AntiForgeryToken()
                <div class="grid-1 graph-form agile_info_shadow">
                    <h3 class="w3_inner_tittle two">@AppletDashIndex.DashIndex.appletdasheditcategorybreadcrums</h3>
                    @Html.HiddenFor(m => m.TCat_Id)
                    <div class="row">


                        <div class="col-md-5 col-md-offset-0">
                            <div class="form-group has-success">
                                @Html.ValidationMessageFor(m => m.TCat_Name_En, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-pencil-square-o"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.TCat_Name_En, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashnewcategorynameen })


                                </div>
                            </div>
                        </div>


                        <div class="col-md-5 col-md-offset-1">
                            <div class="form-group has-success">
                                @Html.ValidationMessageFor(m => m.TCat_Name_Ar, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-pencil-square-o"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.TCat_Name_Ar, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashnewcategorynamear })


                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row">


                        <div class="col-md-5 col-md-offset-0">
                            <div class="form-group has-success">
                                @Html.ValidationMessageFor(m => m.TCat_Description_En, "", new { @class = "text-danger" })
                                <span class="input-group-addon">
                                    @AppletDashIndex.DashIndex.appletdashnewcategorydescriptionen &nbsp;<i class="fa fa-pencil-square-o"></i>
                                </span>

                                @Html.TextAreaFor(m => m.TCat_Description_En, new { placeholder = AppletDashIndex.DashIndex.appletdashnewcategorydescriptionen })
                                <script>
                                    CKEDITOR.replace('TCat_Description_En');
                                </script>

                            </div>
                        </div>


                        <div class="col-md-5 col-md-offset-1 ">
                            @Html.ValidationMessageFor(m => m.TCat_Description_Ar, "", new { @class = "text-danger" })
                            <div class="form-group has-success">

                                <span class="input-group-addon">
                                    @AppletDashIndex.DashIndex.appletdashnewcategorydescriptionar &nbsp;<i class="fa fa-pencil-square-o"></i>
                                </span>

                                @Html.TextAreaFor(m => m.TCat_Description_Ar, new { placeholder = AppletDashIndex.DashIndex.appletdashnewcategorydescriptionar })
                                <script>
                                    CKEDITOR.replace('TCat_Description_Ar');
                                </script>

                            </div>
                        </div>

                    </div>


                    <div class="button">

                        <p class="btnText">@AppletDashIndex.DashIndex.appletdashnewprojectreadybutton</p>
                        <div class="btnTwo">
                            <input type="submit" class="btnText2 btn-submit" value="@AppletDashIndex.DashIndex.appletdashnewprojectsavebutton">
                        </div>


                    </div>

                </div>

                <!--//set-3-->
            }
        </div>

        <!--//forms-inner-->
    </div>
    <!--//forms-->
</div>

<script type="text/javascript">

    $(document).ready(function () {

        var modelStatus =@string.IsNullOrEmpty(Model.TeamsCategoriesStatus).ToString().ToLower();

        if (status == false) {

            var modelMessage =@string.Compare(Model.TeamsCategoriesStatus, "Success");


            if (modelMessage == 0) {



                $.toast({
                    text: " Teams Category Edited Successfuly Thank you :) !", // Text that is to be shown in the toast
                    heading: 'APPLET Software', // Optional heading to be shown on the toast
                    icon: 'success', // Type of toast icon
                    showHideTransition: 'slide', // fade, slide or plain
                    allowToastClose: true, // Boolean value true or false
                    hideAfter: 10000, // false to make it sticky or number representing the miliseconds as time after which toast needs to be hidden
