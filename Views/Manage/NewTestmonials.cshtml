}

<!-- breadcrumbs -->
<div class="w3l_agileits_breadcrumbs">
    <div class="w3l_agileits_breadcrumbs_inner">
        <ul>
            <li><a href="@Url.Action("Testmonials","Manage")">@AppletDashIndex.DashIndex.appletdashindexsidebartestimonials</a><span>«</span></li>
            <li>@AppletDashIndex.DashIndex.appletdashindexsidebarnewtestimonial</li>
        </ul>
    </div>
</div>
<!-- //breadcrumbs -->

<div class="inner_content_w3_agile_info two_in">
