            {


                @Html.AntiForgeryToken()
                <div class="wthree_general">


                    <div class="grid-1 graph-form agile_info_shadow">
                        <h3 class="w3_inner_tittle two">@AppletDashIndex.DashIndex.appletdashindexsidebarnewtestimonial</h3>

                        <div class="row">


                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group has-warning">
                                    @Html.ValidationMessageFor(m => m.Testmonial_ClientName_En, "", new { @class = "text-danger" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </span>
                                        @Html.TextBoxFor(m => m.Testmonial_ClientName_En, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashtestmonialclientnameenglish })

                                    </div>
                                </div>
                            </div>


                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group has-warning">
                                    @Html.ValidationMessageFor(m => m.Testmonial_ClientName_Ar, "", new { @class = "text-danger" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </span>
                                        @Html.TextBoxFor(m => m.Testmonial_ClientName_Ar, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashtestmonialclientnamearabic})

                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">


