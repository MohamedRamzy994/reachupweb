                                </div>
                            </div>

                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group has-warning">
                                    @Html.ValidationMessageFor(m => m.Testmonial_ClientJobTitle_Ar, "", new { @class = "text-danger" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-envelope-square"></i>
                                        </span>
                                        @Html.TextBoxFor(m => m.Testmonial_ClientJobTitle_Ar, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashtestmonialsjobtitlearabic })

                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group has-warning">

                                    @Html.ValidationMessageFor(m => m.TsCat_Id, "", new { @class = "text-danger" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-bitbucket"></i>
                                        </span>

                                        @Html.DropDownListFor(m => m.TsCat_Id, Model.Categories, AppletDashIndex.DashIndex.appletdashnewprojectplaceholdercategory, new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5 col-md-offset-1 ">
                                <!-- FONT AWESOME THEME -->
                                <!-- load the JS files in the right order -->
                                <div class="has-warning">
                                    <div class="file-loading">

                                        @Html.TextBoxFor(m => m.Testmonial_ClientPhoto, new { type = "file", multiple = true })
                                    </div>


                                </div>
                            </div>
                            <script>


                                $(document).on('ready', function () {

                                    $("#Testmonial_ClientPhoto").fileinput({
                                        showUpload: false,
                                        maxFileCount: 1,
                                        mainClass: "input-group-lg",
                                        theme: "fa",
                                        initialPreview: [
                                            "<img src='/Images/images/logo.png' class='file-preview-image' alt='Desert' title='Desert' height='50'>",

                                        ],
                                        // initial preview configuration
                                        initialPreviewConfig: [
                                            {
                                                caption: 'appletsoftware',
                                                width: '120px',
                                                url: '/Images/images/logo.png',
                                                key: 100,
                                                extra: { id: 100 }
                                            }



                                        ]

                                    });


                                });

                            </script>




                        </div>

                        <div class="button">

                            <p class="btnText">@AppletDashIndex.DashIndex.appletdashnewprojectreadybutton</p>
                            <div class="btnTwo">
                                <input type="submit" class="btnText2 btn-submit" value="@AppletDashIndex.DashIndex.appletdashnewprojectsavebutton">
                            </div>


                        </div>


                    </div>
                </div>
                <!--//set-3-->
            }
        </div>
        <!--//forms-inner-->
    </div>
    <!--//forms-->
