                                    @Html.ValidationMessageFor(m => m.Testmonial_Question_Ar, "", new { @class = "text-danger" })
                                    <span class="input-group-addon">
                                        @AppletDashIndex.DashIndex.appletdashtestmonialquestionarabic &nbsp;<i class="fa fa-pencil-square-o"></i>
                                    </span>
                                    @Html.TextAreaFor(m => m.Testmonial_Question_Ar, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashtestmonialquestionarabic })

                                    <script>
                                        CKEDITOR.replace('Testmonial_Question_Ar');
                                    </script>

                                </div>
                            </div>

                        </div>

