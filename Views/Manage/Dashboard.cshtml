                    <div class="ca-content">
                        <h4 class="ca-main">@ViewData["Projects"].ToString()</h4>
                        <h3 class="ca-sub">@AppletDashIndex.DashIndex.appletdashindexsidebardprojects</h3>
                    </div>
                </a>
            </li>

            <li>
                <a href="#">
                    <i class="fa fa-laptop" aria-hidden="true"></i>
                    <div class="ca-content">
                        <h4 class="ca-main two">@ViewData["Plans"].ToString()</h4>
                        <h3 class="ca-sub two">@AppletDashIndex.DashIndex.appletdashindexsidebarplans</h3>
                    </div>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-users" aria-hidden="true"></i>
                    <div class="ca-content">
                        <h4 class="ca-main three">@ViewData["Teams"].ToString()</h4>
                        <h3 class="ca-sub three">@AppletDashIndex.DashIndex.appletdashindexsidebarteams</h3>
                    </div>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-user-secret" aria-hidden="true"></i>
                    <div class="ca-content">
                        <h4 class="ca-main four">@ViewData["Managers"].ToString()</h4>
                        <h3 class="ca-sub four">@AppletDashIndex.DashIndex.appletdashindexsidebarmanagers</h3>
                    </div>
                </a>
            </li>
            <div class="clearfix"></div>
        </ul>
    </div>
    <!-- //agile_top_w3_grids-->
    <!-- /w3ls_agile_circle_progress-->
    <div class="w3ls_agile_cylinder chart agile_info_shadow">
        <h3 class="w3_inner_tittle two"> @AppletDashIndex.DashIndex.appletdashindexchartinsight</h3>

        <div id="chartdiv"></div>


    </div>
    <!-- /w3ls_agile_circle_progress-->
    <!-- /chart_agile-->
    <!-- /w3ls_agile_circle_progress-->
    <div class="w3ls_agile_circle_progress agile_info_shadow">

        <div class="cir_agile_info ">
            <h3 class="w3_inner_tittle">@AppletDashIndex.DashIndex.appletdashindexchartinsight</h3>
            <div class="skill-grids">
                <div class="skills-grid text-center">
                    <div class="circle" id="circles-1"></div>
                    <p>@AppletDashIndex.DashIndex.appletdashindexsidebarclients</p>
                </div>
                <div class="skills-grid text-center">
                    <div class="circle" id="circles-2"></div>
                    <p>@AppletDashIndex.DashIndex.appletdashindexsidebarplans</p>
                </div>
                <div class="skills-grid text-center">
                    <div class="circle" id="circles-3"></div>

                    <p>@AppletDashIndex.DashIndex.appletdashindexsidebardprojects</p>
                </div>
                <div class="skills-grid text-center">
                    <div class="circle" id="circles-4"></div>
                    <p>@AppletDashIndex.DashIndex.appletdashindexsidebarteams</p>
                </div>



                <div class="clearfix"></div>

            </div>
        </div>
    </div>
    <!-- /w3ls_agile_circle_progress-->
    <!--/prograc-blocks_agileits-->
    <div class="prograc-blocks_agileits">



        <div class="col-md-12 fallowers_agile agile_info_shadow">
            <h3 class="w3_inner_tittle two">@AppletDashIndex.DashIndex.appletdashindexrecentclientstitle</h3>
            <div class="work-progres">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@AppletDashIndex.DashIndex.appletdashindexrecentclientsfname</th>
                                <th>@AppletDashIndex.DashIndex.appletdashindexrecentclientslname</th>
                                <th>@AppletDashIndex.DashIndex.appletdashindexrecentclientsemail</th>

                                <th>@AppletDashIndex.DashIndex.appletdashindexrecentclientscompany</th>
                                <th>@AppletDashIndex.DashIndex.appletdashindexrecentclientsphonenumber</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in ViewData["RecentClients"] as IEnumerable<AppletSoftware.Models.AspNetClient>)
                        {


                            <tr>
                                <td>@item.Client_Fname_En</td>
                                <td>@item.Client_Lname_En</td>
                                <td>@item.Client_Email</td>

                                <td><span class="label label-danger">@item.Client_CompanyName_En</span></td>
                                <td><span class="badge badge-info">@item.Client_PhoneNumber</span></td>
                            </tr>


                        }
                            
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    <!--//prograc-blocks_agileits-->

    <!-- /weather_w3_agile_info-->
    <div class="weather_w3_agile_info agile_info_shadow">
        <div class="weather_w3_inner_info">
            <a href="https://www.accuweather.com/en/eg/cairo/127164/driving-current-weather/127164" class="aw-widget-legal">
