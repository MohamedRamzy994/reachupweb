@model AppletSoftware.Models.IndexViewModel
@using System.Threading
@using System.Globalization
@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<!-- /inner_content_w3_agile_info-->
<div class="inner_content_w3_agile_info">
    <!-- /agile_top_w3_grids-->
