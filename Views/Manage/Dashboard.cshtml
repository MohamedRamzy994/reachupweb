        </div>
    </div>
    <!-- //weather_w3_agile_info-->

</div>



@section scripts
    {
    <!-- Chart code -->
<script>
        var chart = AmCharts.makeChart("chartdiv", {
            "theme": "light",
            "type": "serial",
            "startDuration": 2,
            "dataProvider": [{
                "country": "@AppletDashIndex.DashIndex.appletdashindexsidebardprojects",
                "visits": @ViewData["Projects"].ToString(),
                "color": "#FF0F00"
            }, {
                "country": "@AppletDashIndex.DashIndex.appletdashindexsidebarplans",
                "visits": @ViewData["Plans"].ToString(),
                "color": "#FF6600"
            }, {
                "country": "@AppletDashIndex.DashIndex.appletdashindexsidebarclients",
                "visits": @ViewData["Clients"].ToString(),
                "color": "#FF9E01"
            }, {
                "country": "@AppletDashIndex.DashIndex.appletdashindexsidebarteams",
                "visits": @ViewData["Teams"].ToString(),
                "color": "#FCD202"
            }, {
                "country": "@AppletDashIndex.DashIndex.appletdashindexsidebardclientorders",
                "visits": @ViewData["Orders"].ToString(),
                "color": "#FF0F00"
            }, {
                "country": "@AppletDashIndex.DashIndex.appletdashindextopmenunewsletterstitle",
                "visits": @ViewData["NewsLetters"].ToString(),
                "color": "#F8FF01"
            }, {
                "country": "@AppletDashIndex.DashIndex.appletdashindextopmenumessagestitle",
                "visits": @ViewData["Messages"].ToString(),
                "color": "#FF6600"
            },
            {
                "country": "@AppletDashIndex.DashIndex.appletdashindexsidebarmanagers",
                "visits": @ViewData["Managers"].ToString(),
                "color": "#F8FF01"
            }, {
                "country": "@AppletDashIndex.DashIndex.appletdashindexsidebardnews",
                "visits": @ViewData["News"].ToString(),
                "color": "#FF0F00"
            }, {
                "country": "@AppletDashIndex.DashIndex.appletdashindexsidebartestimonials",
                "visits": @ViewData["Testmonials"].ToString(),
                "color": "#F8FF01"
            }],
            "valueAxes": [{
                "position": "left",
                "axisAlpha": 0,
                "gridAlpha": 0
            }],
            "graphs": [{
                "balloonText": "[[category]]: <b>[[value]]</b>",
                "colorField": "color",
                "fillAlphas": 0.85,
                "lineAlpha": 0.1,
                "type": "column",
                "topRadius": 1,
                "valueField": "visits"
            }],
            "depth3D": 10,
            "angle": 10,
            "chartCursor": {
                "categoryBalloonEnabled": false,
                "cursorAlpha": 0,
                "zoomable": false
            },
            "categoryField": "country",
            "categoryAxis": {
                "gridPosition": "start",
                "axisAlpha": 0,
                "gridAlpha": 0

            },
            "export": {
                "enabled": true
            }

        }, 0);
</script>

    <script>
        var colors = [
            ['#ffffff', '#fd9426'], ['#ffffff', '#fc3158'], ['#ffffff', '#53d769'], ['#ffffff', '#147efb']
        ];

            var child1 = document.getElementById('circles-' + 1),
                percentage = @ViewData["Clients"].ToString();

            Circles.create({
                id: child1.id,
                percentage: percentage,
                radius: 80,
                width: 10,
                number: percentage / 1,
                text: '%',
                colors: colors[0]
            });

         var child2 = document.getElementById('circles-' + 2),
                percentage = @ViewData["Plans"].ToString();

            Circles.create({
                id: child2.id,
                percentage: percentage,
                radius: 80,
                width: 10,
                number: percentage / 1,
                text: '%',
                colors: colors[1]
         });
            var child3 = document.getElementById('circles-' + 3),
                percentage = @ViewData["Projects"].ToString();

            Circles.create({
                id: child3.id,
                percentage: percentage,
                radius: 80,
                width: 10,
                number: percentage / 1,
                text: '%',
                colors: colors[2]
            });
           var child4 = document.getElementById('circles-' + 4),
                percentage = @ViewData["Teams"].ToString();

            Circles.create({
                id: child4.id,
                percentage: percentage,
                radius: 80,
                width: 10,
                number: percentage / 1,
                text: '%',
                colors: colors[3]
            });



    </script>
    <!-- //circle -->


}