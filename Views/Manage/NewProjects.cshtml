@model AppletSoftware.Models.ProjectsViewModel
@{

    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<!-- breadcrumbs -->
<div class="w3l_agileits_breadcrumbs">
    <div class="w3l_agileits_breadcrumbs_inner">
        <ul>
            <li><a href="@Url.Action("Projects","Manage")">@AppletDashIndex.DashIndex.appletdashindexsidebardprojects</a><span>«</span></li>
            <li>@AppletDashIndex.DashIndex.appletdashnewprojecttitle</li>
        </ul>
    </div>
</div>
<!-- //breadcrumbs -->

<div class="inner_content_w3_agile_info two_in">
    <h2 class="w3_inner_tittle">@AppletDashIndex.DashIndex.appletdashnewprojecttitle</h2>
    <!--/forms-->
    <div class="forms-main_agileits">
        <!--/forms-inner-->
        <div class="forms-inner">
            <!--/set-3-->
            @using (Html.BeginForm("NewProjects", "Manage", FormMethod.Post, new { id = "ProjectForm", role = "form", enctype = "multipart/form-data" }))
            {


                @Html.AntiForgeryToken()
                <div class="wthree_general">


                    <div class="grid-1 graph-form agile_info_shadow">
                        <h3 class="w3_inner_tittle two">@AppletDashIndex.DashIndex.appletdashnewprojecttitle</h3>

                        <div class="row">


                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group ">
                                    @Html.ValidationMessageFor(m => m.Project_Name_En, "", new { @class = "text-danger" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </span>
                                        @Html.TextBoxFor(m => m.Project_Name_En, new { @class = "form-control1 icon", placeholder = @AppletDashIndex.DashIndex.appletdashnewprojectplaceholdernameenglish })


                                    </div>
                                </div>
                            </div>


                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group ">
                                    @Html.ValidationMessageFor(m => m.Project_Name_Ar, "", new { @class = "text-danger" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </span>
                                        @Html.TextBoxFor(m => m.Project_Name_Ar, new { @class = "form-control1 icon", placeholder = @AppletDashIndex.DashIndex.appletdashnewprojectplaceholdernamearabic })


                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">


                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group ">
                                    @Html.ValidationMessageFor(m => m.Project_Descrption_En, "", new { @class = "text-danger" })
                                    <span class="input-group-addon">
                                        Project Description in English &nbsp;<i class="fa fa-pencil-square-o"></i>
                                    </span>

                                    @Html.TextAreaFor(m => m.Project_Descrption_En, new { placeholder = "Project Description in English" })
                                    <script>
                                        CKEDITOR.replace('Project_Descrption_En');
                                    </script>

                                </div>
                            </div>


                            <div class="col-md-5 col-md-offset-1 ">
                                @Html.ValidationMessageFor(m => m.Project_Descrption_Ar, "", new { @class = "text-danger" })
                                <div class="form-group ">

                                    <span class="input-group-addon">
                                        Project Description in Arabic &nbsp;<i class="fa fa-pencil-square-o"></i>
                                    </span>

                                    @Html.TextAreaFor(m => m.Project_Descrption_Ar, new { placeholder = "Project Description in Arabic" })
                                    <script>
                                        CKEDITOR.replace('Project_Descrption_Ar');
                                    </script>

                                </div>
                            </div>

                        </div>

                        <div class="row">


                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group ">
                                    @Html.ValidationMessageFor(m => m.Project_Url, "", new { @class = "text-danger" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </span>
                                        @Html.TextBoxFor(m => m.Project_Url, new { @class = "form-control1 icon", placeholder = @AppletDashIndex.DashIndex.appletdashnewprojectplaceholderurl })


                                    </div>
                                </div>
                            </div>


                            <div class="col-md-5 col-md-offset-1">
                                <div class="form-group ">

                                    @Html.ValidationMessageFor(m => m.PCat_Id, "", new { @class = "text-danger" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-bitbucket"></i>
                                        </span>

                                        @Html.DropDownListFor(m => m.PCat_Id, Model.Categories, @AppletDashIndex.DashIndex.appletdashnewprojectplaceholdercategory, new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-md-8 col-md-offset-3 ">
                                <!-- FONT AWESOME THEME -->
                                <!-- load the JS files in the right order -->
                                <div class="">
                                    <div class="file-loading">
                                      
                                        @Html.TextBoxFor(m => m.Project_Photo, new { type = "file", multiple = true })
                                    </div>


                                </div>
                            </div>
                            <script>


                                $(document).on('ready', function () {

                                    $("#Project_Photo").fileinput({
                                        showUpload: false,
                                        maxFileCount: 1,
                                        mainClass: "input-group-lg",
                                        theme: "fa",
                                        initialPreview: [
                                            "<img src='/Images/images/logo.png' class='file-preview-image' alt='Desert' title='Desert' height='50' >",

                                        ],
                                        // initial preview configuration
                                        initialPreviewConfig: [
                                            {
                                                caption: 'appletsoftware',
                                                width: '120px',
                                                url: '/Images/images/logo.png',
                                                key: 100,
                                                extra: { id: 100 }
                                            }



                                        ]

                                    });


                                });

                            </script>

                        </div>
                        <div class="button">

                            <p class="btnText"> @AppletDashIndex.DashIndex.appletdashnewprojectreadybutton</p>
                            <div class="btnTwo">
                                <input type="submit" class="btnText2 btn-submit" value=" @AppletDashIndex.DashIndex.appletdashnewprojectsavebutton">
                            </div>


                        </div>



                    </div>
                </div>
                <!--//set-3-->
            }
        </div>

        <!--//forms-inner-->
    </div>
    <!--//forms-->
</div>

<script type="text/javascript">

    $(document).ready(function () {

        var modelStatus =@string.IsNullOrEmpty(Model.ProjectStatus).ToString().ToLower();
        if (status == false) {

            var modelMessage =@string.Compare(Model.ProjectStatus, "Success");
            console.log(modelMessage);

            if (modelMessage == 0) {



                $.toast({
                    text: " Project Added Successfuly Thank you :) !", // Text that is to be shown in the toast
                    heading: 'APPLET Software', // Optional heading to be shown on the toast
                    icon: 'success', // Type of toast icon
                    showHideTransition: 'slide', // fade, slide or plain
                    allowToastClose: true, // Boolean value true or false
                    hideAfter: 10000, // false to make it sticky or number representing the miliseconds as time after which toast needs to be hidden
                    stack: 5, // false if there should be only one toast at a time or a number representing the maximum number of toasts to be shown at a time
                    position: { left: '0', right: '0', top: '0', bottom: 'auto' }, // bottom-left or bottom-right or bottom-center or top-left or top-right or top-center or mid-center or an object representing the left, right, top, bottom values



                    textAlign: 'center',  // Text alignment i.e. left, right or center
                    loader: true,  // Whether to show loader or not. True by default
                    loaderBg: '#9EC600',  // Background color of the toast loader
                    beforeShow: function () { }, // will be triggered before the toast is shown
                    afterShown: function () { }, // will be triggered after the toat has been shown
                    beforeHide: function () { }, // will be triggered before the toast gets hidden
                    afterHidden: function () { }  // will be triggered after the toast has been hidden
                });




            }



        }




    });

</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

