@model AppletSoftware.Models.NewsViewModel

@{

    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<!-- breadcrumbs -->
<div class="w3l_agileits_breadcrumbs">
    <div class="w3l_agileits_breadcrumbs_inner">
        <ul>
            <li><a href="@Url.Action("News","Manage")">@Appletindex.Index.applettopmenuhome</a><span>«</span></li>
            <li>@AppletDashIndex.DashIndex.appletdasheditnewsbreadcrums</li>
        </ul>
    </div>
</div>
<!-- //breadcrumbs -->

<div class="inner_content_w3_agile_info two_in">
    <h2 class="w3_inner_tittle">@AppletDashIndex.DashIndex.appletdasheditnewsbreadcrums</h2>

    <!--/forms-->
    <div class="forms-main_agileits">
        <!--/forms-inner-->
        <div class="forms-inner">
            <!--/set-3-->

            <div class="wthree_general">


                <div class="grid-1 graph-form agile_info_shadow">
                    <h3 class="w3_inner_tittle two"> @AppletDashIndex.DashIndex.appletdasheditnewsdetails</h3>

                    <div class="row">


                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">


                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashnewnewsplaceholdertitleinenglish)</div>
                                    <div class="panel-body"> @Html.DisplayFor(m => m.News_Title_En, new { @class = "" })</div>
                                </div>









                            </div>
                        </div>
                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">


                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashnewnewsplaceholdertitleinarabic)</div>
                                    <div class="panel-body"> @Html.DisplayFor(m => m.News_Title_Ar, new { @class = "" })</div>
                                </div>









                            </div>
                        </div>




                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">

                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashprojectsdatetime)</div>
                                    <div class="panel-body"> @Html.DisplayFor(m => m.News_DateTime, new { @class = "" })</div>
                                </div>








                            </div>
                        </div>


                    </div>


                    <div class="row">

                        <div class="col-md-4 col-md-offset-0">



                            <div class="panel panel-info">
                                <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdasheditnewsphoto)</div>
                                <div class="panel-body"> <img src="@Url.Content("~/Images/resizedNews/"+Model.News_Photo)" class="img-thumbnail" /></div>
                            </div>









                        </div>
                        



                        <div class="col-md-4 col-md-offset-0">



                            <div class="panel panel-info">
                                <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashnewnewsplaceholdershortenglish)</div>
                                <div class="panel-body"> @Html.Raw(Model.News_Short_En)</div>
                            </div>









                        </div>
                        <div class="col-md-4 col-md-offset-0">



                            <div class="panel panel-info">
                                <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashnewnewsplaceholdershortearabic)</div>
                                <div class="panel-body"> @Html.Raw(Model.News_Short_Ar)</div>
                            </div>









                        </div>





                    </div>
                  

                    <div class="row">

                        <div class="col-md-4 col-md-offset-0">
                            <div class="form-group has-success">

                                <div class="panel panel-info">
                                    <div class="panel-heading">  @Html.Label(AppletDashIndex.DashIndex.appletdashprojectcategoriespublisher)</div>

                                    @{
                AppletSoftware.Models.AppletSoftwareEntities Context = new AppletSoftware.Models.AppletSoftwareEntities();

                string Fname_En = Context.AspNetUsersInfoPlus.Where(m => m.Id == Model.Id).SingleOrDefault().UInfoPlus_Fname_En;
                string Lname_En = Context.AspNetUsersInfoPlus.Where(m => m.Id == Model.Id).SingleOrDefault().UInfo_Lname_En;

                string Publisher = Fname_En + " " + Lname_En;

                                    }

                                    <div class="panel-body"> @Html.DisplayFor(m => Publisher, new { @class = "" })</div>
                                </div>






                            </div>



                        </div>

                    </div>



                </div>




            </div>

            @using (Html.BeginForm("EditNews", "Manage", FormMethod.Post, new { id = "EditNewsForm", role = "form", enctype = "multipart/form-data" }))
    {


        @Html.AntiForgeryToken()


        <div class="wthree_general">


            <div class="grid-1 graph-form agile_info_shadow">
                <h3 class="w3_inner_tittle two">@AppletDashIndex.DashIndex.appletdasheditnewsbreadcrums</h3>

                <div class="row">
                    @Html.HiddenFor(m => m.News_Id)

                    <div class="col-md-5 col-md-offset-1">
                        <div class="form-group has-success">
                            @Html.ValidationMessageFor(m => m.News_Title_En, "", new { @class = "text-danger" })
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-pencil-square-o"></i>
                                </span>
                                @Html.TextBoxFor(m => m.News_Title_En, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashnewnewsplaceholdertitleinenglish })


                            </div>
                        </div>
                    </div>


                    <div class="col-md-5 col-md-offset-1">
                        <div class="form-group has-success">
                            @Html.ValidationMessageFor(m => m.News_Title_Ar, "", new { @class = "text-danger" })
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-pencil-square-o"></i>
                                </span>
                                @Html.TextBoxFor(m => m.News_Title_Ar, new { @class = "form-control1 icon", placeholder = AppletDashIndex.DashIndex.appletdashnewnewsplaceholdertitleinarabic })


                            </div>
                        </div>
                    </div>

                </div>

                <div class="row">


                    <div class="col-md-5 col-md-offset-1">
                        <div class="form-group has-success">
                            @Html.ValidationMessageFor(m => m.News_Short_En, "", new { @class = "text-danger" })
                            <span class="input-group-addon">
                                @AppletDashIndex.DashIndex.appletdashnewnewsplaceholdershortenglish &nbsp;<i class="fa fa-pencil-square-o"></i>
                            </span>

                            @Html.TextAreaFor(m => m.News_Short_En, new { placeholder = AppletDashIndex.DashIndex.appletdashnewnewsplaceholdershortenglish })
                            <script>
                                CKEDITOR.replace('News_Short_En');
                            </script>

                        </div>
                    </div>


                    <div class="col-md-5 col-md-offset-1 ">
                        @Html.ValidationMessageFor(m => m.News_Short_Ar, "", new { @class = "text-danger" })
                        <div class="form-group has-success">

                            <span class="input-group-addon">
                               @AppletDashIndex.DashIndex.appletdashnewnewsplaceholdershortearabic &nbsp;<i class="fa fa-pencil-square-o"></i>
                            </span>

                            @Html.TextAreaFor(m => m.News_Short_Ar, new { placeholder = AppletDashIndex.DashIndex.appletdashnewnewsplaceholdershortearabic })
                            <script>
                                CKEDITOR.replace('News_Short_Ar');
                            </script>

                        </div>
                    </div>

                </div>

                <div class="row">


                    <div class="col-md-5 col-md-offset-1">
                        <div class="form-group has-success">
                            @Html.ValidationMessageFor(m => m.News_Long_En, "", new { @class = "text-danger" })
                            <span class="input-group-addon">
                                @AppletDashIndex.DashIndex.appletdashnewnewsplaceholderlongenglish &nbsp;<i class="fa fa-pencil-square-o"></i>
                            </span>

                            @Html.TextAreaFor(m => m.News_Long_En, new { placeholder = AppletDashIndex.DashIndex.appletdashnewnewsplaceholderlongenglish })
                            <script>
                                CKEDITOR.replace('News_Long_En');
                            </script>

                        </div>
                    </div>


                    <div class="col-md-5 col-md-offset-1 ">
                        @Html.ValidationMessageFor(m => m.News_Long_Ar, "", new { @class = "text-danger" })
                        <div class="form-group has-success">

                            <span class="input-group-addon">
                                @AppletDashIndex.DashIndex.appletdashnewnewsplaceholderlongarabic  &nbsp;<i class="fa fa-pencil-square-o"></i>
                            </span>

                            @Html.TextAreaFor(m => m.News_Long_Ar, new { placeholder = AppletDashIndex.DashIndex.appletdashnewnewsplaceholderlongarabic })
                            <script>
                                CKEDITOR.replace('News_Long_Ar');
                            </script>

                        </div>
                    </div>

                </div>

                <div class="row">

                    <div class="col-md-5 col-md-offset-1">
                        <div class="has-success">
                            <div class="file-loading">

                                @Html.TextBoxFor(m => m.News_Photo, new { type = "file", multiple = true })
                            </div>
                            <script>


                                $(document).on('ready', function () {

                                    $("#News_Photo").fileinput({
                                        showUpload: false,
                                        maxFileCount: 1,
                                        mainClass: "input-group-lg",
                                        theme: "fa",
                                        initialPreview: [
                                            "<img src='/Images/images/logo.png' class='file-preview-image' alt='Desert' title='Desert' height='50'>",

                                        ],
                                        // initial preview configuration
                                        initialPreviewConfig: [
                                            {
                                                caption: 'appletsoftware',
                                                width: '120px',
                                                url: '/Images/images/logo.png',
                                                key: 100,
                                                extra: { id: 100 }
                                            }



                                        ]

                                    });


                                });

                            </script>

                        </div>
                    </div>


                    <div class="col-md-5 col-md-offset-1">
                        <div class="form-group has-success">

                            @Html.ValidationMessageFor(m => m.NCat_Id, "", new { @class = "text-danger" })
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-bitbucket"></i>
                                </span>

                                @Html.DropDownListFor(m => m.NCat_Id, Model.Categories, AppletDashIndex.DashIndex.appletdashnewprojectplaceholdercategory, new { @class = "form-control" })

                            </div>
                        </div>
                    </div>

                </div>

                <div class="button">

                    <p class="btnText"> @AppletDashIndex.DashIndex.appletdashnewprojectreadybutton</p>
                    <div class="btnTwo">
                        <input type="submit" class="btnText2 btn-submit" value="@AppletDashIndex.DashIndex.appletdashnewprojectsavebutton">
                    </div>


                </div>



            </div>
        </div>


        <!--//set-3-->
}
        </div>

        <!--//forms-inner-->
    </div>
    <!--//forms-->
</div>

